<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ProgressBar
            android:id="@id/progressBar"
            android:background="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:layout_marginTop="-10.0dip"
            android:indeterminate="true" style="?android:progressBarStyleHorizontal" />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="48.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_with_email"
                     />
                <EditText
                    android:textSize="25.0sp"
                    android:id="@+id/enroll"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90.0dip"
                    android:hint="@string/enroll_optional"
                    android:drawablePadding="15.0dip"
                    android:drawableStart="@drawable/ic_enroll"
                    android:backgroundTint="@color/yellow" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="25.0sp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:id="@id/et_mail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_email"
                        android:drawablePadding="20.0dip"
                        android:drawableStart="@drawable/ic_emailx"
                        android:backgroundTint="@color/yellow" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedText1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/white"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="25.0sp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:id="@id/et_pass"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_password"
                        android:drawablePadding="20.0dip"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_pass"
                        android:backgroundTint="@color/yellow" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/white"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_cnfpass"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:drawableStart="@drawable/ic_pass"
                        android:drawablePadding="20.0dip"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="25.0sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/bt_sign_up"
                    android:layout_width="330.0dip"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40.0dip"
                    android:background="@drawable/stylenew"
                    android:fontFamily="\@font/"
                    android:gravity="center"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:textSize="25.0sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="Already have an account??"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="Sign In"
                        android:textColor="@color/white"
                        android:textSize="18.0sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>